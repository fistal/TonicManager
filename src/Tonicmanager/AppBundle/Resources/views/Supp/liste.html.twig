{% extends "TonicmanagerAppBundle::admin.html.twig" %}
{% block title %}
	{{ parent() }}
{% endblock %}

{% block TonicManagerAdminTitre_body %}Liste de vos option <a href="{{path('tonicmanagerAppBundle_ajoutOption')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span></a>{% endblock %}
{% block TonicManagerAdmin_body %}		
		<div class="panel panel-primary">
			  <div class="panel-heading">
				<h3 class="panel-title">Vos options </h3>
			  </div>
			  <div class="panel-body">		
				<table class="table table-hover" id="myTable">
					<thead>
					  <tr>
						<th class="header">Libelle</th>
						<th class="header">Prix</th>			
						<th></th>
					  </tr>
					</thead>
					<tbody>
						{% for option in options %}
							<tr>
								<td>{{option.libelle}}</td>
								<td>{{option.prix}}</td>
								<td><a class="btn btn-warning" href="#">Editer</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>					  
			  </div>
		</div>	
{% endblock %}